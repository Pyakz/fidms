{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:pull": "bunx drizzle-kit introspect",
    "build": "tsc",
    "dev": "bun run docker:up && bun --watch run src/index.ts && tsc --watch",
    "studio": "bunx drizzle-kit studio",
    "auth:generate": "bunx @better-auth/cli generate --output ./src/db/schemas/auth.ts",
    "auth:generate:default": "bunx @better-auth/cli generate",
    "auth:migrate": "bunx drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/sentry": "^1.2.2",
    "better-auth": "^1.3.25",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.7.11",
    "http-status-codes": "^2.3.0",
    "pg": "^8.16.3",
    "shared": "workspace:*",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  }
}
